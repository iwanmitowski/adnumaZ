@model adnumaZ.ViewModels.UploadTorrentViewModel

<div>
    <form class="d-flex justify-content-center align-baseline" method="post" asp-controller="Torrent" , asp-action="Upload" enctype="multipart/form-data">
        <div>
            <div class="form-group">
                <label asp-for="Title" for="formTitle" class="col-form-label d-block"></label>
                <input asp-for="Title" for="formTitle" class="form-control" />
                <span asp-validation-for="Title" class="text-danger d-block"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" for="formFile" class="col-form-label d-block">
                </label>
                <input asp-for="File" for="formFile" class="form-control-file" accept=".torrent" />
                <span asp-validation-for="File" class="text-danger d-block"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" for="formTitle" class="col-form-label d-block"></label>
                <textarea asp-for="Description" for="formTitle" rows="8" cols="70" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger d-block"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" for="formFile" class="col-form-label d-block"></label>
                <input asp-for="ImageUrl" for="formFile" class="form-control" />
            </div>
            <input type="submit" class="btn btn-primary" />

        </div>
    </form>
</div>