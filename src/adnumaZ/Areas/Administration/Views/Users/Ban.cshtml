@model BanInputModel

<h1 class="text-center text-danger">CAUTION! You are going to ban the user with ID</h1>
<h1 class="text-center text-danger">@Model.UserId</h1>
<div>
    <form class="d-flex justify-content-center align-baseline" method="post" asp-area="Administration" asp-controller="Users" , asp-action="Ban">
        <div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" />
                <label asp-for="BanReason" for="formTitle" class="col-form-label d-block"></label>
                <textarea asp-for="BanReason" for="formTitle" rows="8" cols="70" class="form-control"></textarea>
            </div>
            <input type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>
